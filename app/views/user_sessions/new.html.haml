- @misc_js << "jq('#user_session_login')[0].focus();"
.loginform
  %h1 Log in
  - form_for @user_session, :url => user_session_path do |f|
    = f.error_messages
    %table
      %tr
        %td.label= f.label :login, "Username"
        %td= f.text_field :login
      %tr
        %td.label= f.label :password
        %td= f.password_field :password
    %p
      = f.check_box :remember_me
      = f.label :remember_me
    %p
      = f.submit "Login"
    %p.signuplink
      No account?
      = link_to "Sign Up", new_account_path
